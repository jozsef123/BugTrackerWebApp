@model IEnumerable<BugTrackerWebApp.Models.TicketHistory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreviousAssignedDeveloper.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewAssignedDeveloper.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedWhen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Updater.UserName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PreviousAssignedDeveloper.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewAssignedDeveloper.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedWhen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Updater.UserName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btbn-danger">Delete</a>
                </td>
            </tr>
    }
    </tbody>
</table>
