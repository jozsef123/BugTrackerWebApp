@model BugTrackerWebApp.Models.Ticket

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ticket</h4>
    <a asp-controller = "Comments" asp-action="Create" class="btn btn-primary">Create a comment for ticket</a> 
    <a asp-controller = "Comments" asp-action="Index" class="btn btn-success">View comments for ticket</a>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Project Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Project.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <div class="form-group" style="min-width:900px">
            <textarea readonly asp-for="Description" class="form-control" style="height: 200px"></textarea>
        </div>
        <dt class = "col-sm-2">
            Submitter 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Submitter.UserName)
        </dd>
        <dt class = "col-sm-2">
            Assigned Developer
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AssignedDeveloper.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedWhen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedWhen)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpdatedWhen)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpdatedWhen)
        </dd>
    </dl>
</div>
<div>
    <h3>Comments</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Submitter
                </th>
                <th>
                    Message
                </th>
                <th>
                    Date Created
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Comments) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Submitter.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Message)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedWhen)
                    </td>
                    <td>
                        <a asp-controller = "Comments" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller = "Comments" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller = "Comments" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
       </tbody>
    </table>
</div>
<div>
    <h3>Ticket History</h3>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Previous Assigned Developer
                </th>
                <th>
                    New Assigned Developer
                </th>
                <th>
                   Date Changed
                </th>
                <th>
                    Updater UserName
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.TicketHistory) {
            <tr>
                <td>
                    @if (@item.PreviousAssignedDeveloperId != null)
                    {
                        @item.PreviousAssignedDeveloper.UserName
                    } 
                </td>
                <td>
                    @if (@item.NewAssignedDeveloperId != null)
                    {
                        @item.NewAssignedDeveloper.UserName
                    }
                </td>
                <td>
                    @item.UpdatedWhen
                </td>
                <td>
                    @item.Updater.UserName
                </td>
            </tr>
        }
       </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> 
    <a asp-action="Index" class="btn btn-secondary">Back to Tickets List</a> 
    <a asp-controller = "Projects" asp-action="Details" asp-route-id="@Model.Project.Id" class="btn btn-secondary">Back to Project details</a> 
    <a asp-controller = "AppFiles" asp-action="Create" class="btn btn-primary">Upload file</a>  
    <a asp-controller = "AppFiles" asp-action="Index" class="btn btn-success">View files for ticket</a> 
</div>
