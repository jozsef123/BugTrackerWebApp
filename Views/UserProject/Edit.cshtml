@model BugTrackerWebApp.Models.UserProject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                 <label asp-for="User.UserName" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.UserId, 
                    (SelectList)ViewBag.Users, "Select a UserName"
                )
            </div>
            <div class="form-group">
                <label asp-for="Project.Id" class="control-label">Project Name</label>
                <br />
                @Html.DropDownListFor(m => m.ProjectId, 
                    (SelectList)ViewBag.Projects, "Select a Project"
                )
            </div>
            <p style="color:red">@Html.Raw(ViewBag.ErrorMessage)</p>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
