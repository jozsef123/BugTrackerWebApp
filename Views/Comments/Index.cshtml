@model IEnumerable<BugTrackerWebApp.Models.Comment>

@{
    ViewData["Title"] = "Index";
}

<h1>Comments</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th class="col-sm-3">
                Ticket
            </th>
            <th class="col-sm-3">
                Submitter
            </th>
            <th class="col-sm-3">
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                <p style="color:red;">@TempData["Error"]</p>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="col-sm-3">
                @Html.DisplayFor(modelItem => item.Ticket.Name)
            </td>
            <td class="col-sm-3">
                @Html.DisplayFor(modelItem => item.Submitter.UserName)
            </td>
            <td class="col-sm-3">
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-success">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
