@model BugTrackerWebApp.Models.Comment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TicketId" class="control-label">Ticket Name</label>
                <input readonly type="hidden" asp-for="TicketId" class="form-control" />
                <input readonly class="form-control" value="@Model.Ticket.Name" />
                <span asp-validation-for="TicketId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Submitter UserName</label>
                <input readonly asp-for="Submitter" class="form-control" /></>
            </div>
            <div class="form-group" style="min-width:900px">
                <label asp-for="Message" class="control-label">Message</label>
                <textarea asp-for="Message" class="form-control" style="height: 200px"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedWhen" class="control-label">Date Created</label>
                <input readonly asp-for="CreatedWhen" class="form-control" />
                <span asp-validation-for="CreatedWhen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedWhen" class="control-label">Date Updated</label>
                <input readonly asp-for="UpdatedWhen" class="form-control" />
                <span asp-validation-for="UpdatedWhen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
