@model BugTrackerWebApp.Models.User_Project

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User_Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">UserName</label>
                <br />
                @Html.DropDownListFor(m => m.UserId, 
                    (SelectList)ViewBag.Users, "Select a UserName"
                )
                @*<input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Project Name</label>
                <br />
                @Html.DropDownListFor(m => m.ProjectId, 
                    (SelectList)ViewBag.Projects, "Select a Project"
                )
                @*<input asp-for="ProjectId" class="form-control" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
