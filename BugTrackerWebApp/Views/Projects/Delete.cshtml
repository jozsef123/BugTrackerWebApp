@model BugTrackerWebApp.Models.Project

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <section>
        <h4>Project: @Html.DisplayFor(model => model.Name)</h4>
        <b>Owner: </b>@Html.DisplayFor(model => model.Owner.UserName)
        <div class="form-group">
            <label asp-for="Description" class="control-label">
                <b>Description: </b>
            </label>
            <textarea readonly asp-for="Description" class="form-control" style="height: 200px; min-width:900px"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CreatedWhen" class="control-label">Date Created</label>
            <input readonly asp-for="CreatedWhen" class="form-control" style="width: 210px"/>
            <span asp-validation-for="CreatedWhen" class="text-danger"></span>
        </div>
    </section>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
