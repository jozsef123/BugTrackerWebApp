@model BugTrackerWebApp.Models.Ticket
@using BugTrackerWebApp.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">Project Name</label>
                <input readonly asp-for="Project.Name" class="form-control" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ticket Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Ticket Description</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubmitterUserName" class="control-label">Submitter Username</label>
                <input readonly asp-for="SubmitterUserName" class="form-control"/>
                <span asp-validation-for="SubmitterUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignedDeveloperUserName" class="control-label">Assigned Developer</label>
                <br />
                @Html.DropDownListFor(m => m.AssignedDeveloperUserName, 
                    (SelectList)ViewBag.Users, "Select a Developer"
                )
                @*<input asp-for="AssignedDeveloperUserName" class="form-control" />
                <span asp-validation-for="AssignedDeveloperUserName" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Priority" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.Priority, new SelectList(Enum.GetValues(typeof(Priority))),
                "Select Ticket Priority")
                @*<label asp-for="Priority" class="control-label"></label>
                <input asp-for="Priority" class="form-control" />
                <span asp-validation-for="Priority" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.Type, new SelectList(Enum.GetValues(typeof(BugTrackerWebApp.Models.Type))),
                "Select Ticket Type")
                @*<label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <br />
                @Html.DropDownListFor(m => m.Status, new SelectList(Enum.GetValues(typeof(Status))),
                "Select Ticket Status")
                @*<label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
